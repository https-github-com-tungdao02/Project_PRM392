<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bookaland_conner_16"
            android:gravity="center"
            android:padding="12dp"
            android:text="User Details"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageDetails"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="12dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/tv_user_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="User Name"
            android:textStyle="bold"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageDetails" />

        <TextView
            android:id="@+id/tv_address_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="48dp"
            android:text="Address:"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/edt_gmail_details"
            app:layout_constraintHorizontal_bias="0.659"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_details" />

        <EditText
            android:id="@+id/edt_address_details"
            android:layout_width="225dp"
            android:layout_height="35dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_full_bookaland_conner_16"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_details" />


        <TextView
            android:id="@+id/tv_email_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Email:"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/edt_gmail_details"
            app:layout_constraintHorizontal_bias="0.83"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_address_details" />

        <EditText
            android:id="@+id/edt_gmail_details"
            android:layout_width="225dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_full_bookaland_conner_16"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_address_details" />

        <TextView
            android:id="@+id/tv_phone_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Phone:"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/edt_phone_details"
            app:layout_constraintHorizontal_bias="0.818"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_gmail_details" />

        <EditText
            android:id="@+id/edt_phone_details"
            android:layout_width="225dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_full_bookaland_conner_16"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_gmail_details" />

        <TextView
            android:id="@+id/tv_image_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="ImageURL:"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/edt_imageurl_details"
            app:layout_constraintHorizontal_bias="0.753"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_phone_details" />

        <EditText
            android:id="@+id/edt_imageurl_details"
            android:layout_width="225dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_full_bookaland_conner_16"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_phone_details" />


        <TextView
            android:id="@+id/tv_role_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="60dp"
            android:text="Role:"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tv_gender_details"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_imageurl_details" />

        <TextView
            android:id="@+id/tv_gender_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="60dp"
            android:text="Gender:"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_role_details"
            app:layout_constraintTop_toBottomOf="@+id/edt_imageurl_details" />

        <Spinner
            android:id="@+id/sp_role_details"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:background="#FBC87B"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_role_details" />

        <Spinner
            android:id="@+id/sp_gender_details"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="53dp"
            android:background="#FBC87B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_gender_details" />

        <Button
            android:id="@+id/btn_update_details"
            android:layout_width="106dp"
            android:layout_height="47dp"
            android:layout_marginTop="130dp"
            android:backgroundTint="@color/bookaland700"
            android:text="Update"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/btn_delete_details"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_imageurl_details" />

        <Button
            android:id="@+id/btn_delete_details"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:backgroundTint="@color/bookaland700"
            android:text="Delete"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/btn_cancel_details"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_update_details"
            app:layout_constraintTop_toBottomOf="@+id/edt_imageurl_details" />

        <Button
            android:id="@+id/btn_cancel_details"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:backgroundTint="@color/bookaland700"
            android:text="Cancel"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_delete_details"
            app:layout_constraintTop_toBottomOf="@+id/edt_imageurl_details" />


</androidx.constraintlayout.widget.ConstraintLayout>